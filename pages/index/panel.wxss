.panel-con {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #f8f8f8;
}

.warn-con {
  font-size: 1rem;
  line-height: 1.5rem;
  color: #009933;
  padding: 0 1rem;
}

.pad-con {
  padding: 0.5rem 0;
}

.draw-con {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.panel-draw {
  width: 100%;
  /*height: 100%;*/
  background-color: #fff;
  flex: 1;
  box-shadow: 0 0 5px #ccc;
}

.btn-con {
  width: 90%;
  margin: 0 auto 1rem;
}

page {
  height: 100%;
}

.icon-con {
  display: flex;
  padding: 1rem;
  justify-content: space-between;
}
.draw-color {
  display: flex;
}

.pan-icon,.empty-icon,.xp-icon {
  width: 1.5rem;
  height: 1.5rem;
}
.pan-icon image,.empty-icon image,.xp-icon image {
  width: 100%;
  height: 100%;
}
.color-tip {
  width: 1.5rem;
  height: 1.5rem;
  margin-left: 0.5rem;
  border-radius: 100%;
}
.color-01 {background-color: #333333;}
.color-02 {background-color: #66CC66;}
.color-03 {background-color: #6699FF;}
.color-04 {background-color: #FFFF66;}
.color-05 {background-color: #FF6666;}
.color-06 {background-color: #9999CC;}
.color-07 {background-color: #FF99CC;}
.line-con {
  margin-top: 0.6rem;
}
.mar-l{margin-left: 0.5rem}
.onchose {
  box-shadow: 0 0 8px #333;
}
.ric {
  border-radius: 100%;
}